<mujoco model="two_floor_with_stairs">

  <!-- ================= 视觉 ================= -->
  <visual>
    <headlight diffuse="0.7 0.7 0.7"
               ambient="0.3 0.3 0.3"
               specular="0 0 0"/>
    <global azimuth="120" elevation="-25"/>
  </visual>

  <!-- ================= 资源 ================= -->
  <asset>
    <mesh name="eight" file="eight.obj"/>
  </asset>

  <worldbody>

    <!-- ================= 光源 ================= -->
    <light pos="0 0 15"  dir="0 0 -1"/>
    <light pos="15 0 15" dir="0 0 -1"/>
    <light pos="-15 0 15" dir="0 0 -1"/>

    <!-- ===================================================== -->
    <!-- ======================= 一楼 ======================= -->
    <!-- ===================================================== -->

    <!-- 一楼地面 -->
    <geom name="floor_1"
          type="plane"
          size="20 20 0.1"
          pos="0 0 0"
          rgba="0.15 0.15 0.18 1"/>

    <!-- 一楼外墙 -->
    <geom type="box" size="0.2 20 1.5" pos=" 20 0 1.5" rgba="0.9 0.9 0.9 1"/>
    <geom type="box" size="0.2 20 1.5" pos="-20 0 1.5" rgba="0.9 0.9 0.9 1"/>
    <geom type="box" size="20 0.2 1.5" pos="0  20 1.5" rgba="0.9 0.9 0.9 1"/>
    <geom type="box" size="20 0.2 1.5" pos="0 -20 1.5" rgba="0.9 0.9 0.9 1"/>

    <!-- 一楼障碍物 -->
    <geom type="box"      size="1 1 1"     pos="5 5 1"     rgba="1 0 0 0.8"/>
    <geom type="box"      size="1.5 0.6 0.8" pos="-6 3 0.8" rgba="1 0 0 0.8"/>
    <geom type="cylinder" size="0.6 1.2"   pos="3 -7 1.2"  rgba="0 0 1 0.8"/>
    <geom type="sphere"   size="0.8"       pos="-8 -6 0.8" rgba="0 1 0 0.8"/>

    <!-- ===================================================== -->
    <!-- ======================= 楼梯 ======================= -->
    <!-- ===================================================== -->

    <!-- 斜坡楼梯：从一楼到二楼（z=0 -> z=3） -->
    <geom name="stair_ramp"
          type="box"
          size="2 4 0.15"
          pos="0 -10 -0.1"
          euler="0.15 0 0"
          rgba="0.45 0.45 0.5 1"/>

    <!-- ===================================================== -->
    <!-- ======================= 二楼 ======================= -->
    <!-- ===================================================== -->

    <!-- 二楼地板（半透明，中庭留洞） -->
    <geom name="floor_2_left"
          type="box"
          size="8 20 0.15"
          pos="-14 0 3"
          rgba="0.18 0.18 0.2 0.6"/>

    <geom name="floor_2_right"
          type="box"
          size="8 20 0.15"
          pos="12 0 3"
          rgba="0.18 0.18 0.2 0.6"/>

    <geom name="floor_2_front"
          type="box"
          size="4 8 0.15"
          pos="0 12 3"
          rgba="0.18 0.18 0.2 0.6"/>

    <geom name="floor_2_back"
          type="box"
          size="4 8 0.15"
          pos="0 -12 3"
          rgba="0.18 0.18 0.2 0.6"/>

    <!-- 二楼护栏（不透明） -->
    <geom type="box" size="0.15 20 0.8" pos=" 20 0 3.8" rgba="0.8 0.8 0.8 1"/>
    <geom type="box" size="0.15 20 0.8" pos="-20 0 3.8" rgba="0.8 0.8 0.8 1"/>
    <geom type="box" size="20 0.15 0.8" pos="0  20 3.8" rgba="0.8 0.8 0.8 1"/>
    <geom type="box" size="20 0.15 0.8" pos="0 -20 3.8" rgba="0.8 0.8 0.8 1"/>

    <!-- 二楼障碍物 -->
    <geom type="box"      size="0.8 0.8 0.6" pos="-10 6 3.6" rgba="1 0.6 0 0.8"/>
    <geom type="capsule"  size="0.3 0.8"     pos="8 -5 3.8"  rgba="0.6 0 1 0.8"/>
    <geom type="ellipsoid" size="0.6 0.4 0.3" pos="0 10 3.5" rgba="1 1 0 0.8"/>

    <!-- mesh 示例 -->
    <geom type="mesh"
          mesh="eight"
          pos="6 6 3.5"
          quat="1 0 0 0"
          rgba="0 1 0 1"/>

  </worldbody>
</mujoco>
